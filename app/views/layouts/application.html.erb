<!DOCTYPE html>
<html>
  <head>
    <title>Reservester</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="navbar navbar-fixed-top">
    <% if user_signed_in? %>
    Logged in as <strong><%= current_user.email%></strong>
    <%= link_to 'Dashboard', users_dashboard_path, :class => 'navbar-link' %> |
    <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
    <%= link_to 'Logout', logout_path, :class => 'navbar-link' %>
  <% else %>
    <%= link_to 'Sign up', new_user_registration_path, :class => 'navbar-link' %> |
    <%= link_to 'Login', new_user_session_path, :class => 'navbar-link' %>
  <% end %>
	<div class="navbar-inner">
		<div class="container">
			<a href="#" class="brand">Reservester</a>
			<ul class="nav">
				<li><%= link_to "All Restaurants", restaurants_path %></li>
			</ul>
		</div>
	</div>
</div>	
<% if notice %><p class="notice"><%= notice %></p><% end %>
<% if alert %><p class="alert"><%= alert %></p><% end %>

    <%= yield %>
  </body>
</html>
