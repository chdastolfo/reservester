<% if current_user.role == "patron" %>

    <h1>
        <%= current_user.email %>'s Dashboard </h1>
        <div>
            <h2>Favorited Restaurants</h2>
        </div>
    

<table class="table table-striped">
    <tr>
        <th>Name</th>
        <th></th>
    </tr>
    <% @restaurants.each do |restaurant| %>
       </br>
        </br>
          <b><%= link_to restaurant.name, restaurant_path(restaurant) %></b>
          <p><%= restaurant.address %></p> 
          <p><%= restaurant.content %></p> 
      <%= link_to "unfavorite", favorite_restaurant_path(restaurant, type: "unfavorite"), method: :put, :remote => true %>
  <% end %>
</table>


<% end %>