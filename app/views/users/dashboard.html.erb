<h1>
    <%= @user.name %>'s Dashboard
    <div class="pull-right">
        <%= link_to new_user_restaurant_path(@user), :class => 'btn' do %>
            New Restaurant
        <%- end %>
    </div>
</h1>

<table class="table table-striped">
    <tr>
        <th>Name</th>
        <th></th>
    </tr>
    <%- @restaurants.each do |restaurant| %>
        <tr>
            <td><%= link_to restaurant.name, restaurant %></td>
            <td><%= link_to 'Remove', restaurant, :method => :delete, :confirm => "Are you sure that you want to remove #{restaurant.name}?" %></td>
        </tr>
    <%- end %>
</table>