        <%= link_to new_user_restaurant_path(@user), :class => 'btn' do %>
            New Restaurant
        <%- end %>
        <%= link_to "Add New Restaurant", new_restaurant_path, class: "btn btn-success" %>
    </div>
<div class="meta">
      <span class="admin">
         <tr>
        <th>Name</th>
        <th></th>
            </tr>
