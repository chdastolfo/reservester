<p>
	<strong>Name:</strong>
	<%= @restaurant.name %>
</p>

<p>
	<strong>Description:</strong>
	<%= @restaurant.content %>
</p>

<p>
	<strong>Address:</strong>
	<%= @restaurant.address %>
</p>

<% if owner_signed_in? %>
	<h3>Reservations</h3>
	<tr>
		<th>Email</th>
		<th>Reservation Time</th>
		<th>Message</th>
	</tr>

	<% if @restaurant.reservation.present? %>
		<% @restaurant.reservation do |reservation| %>
			<tr>
				<td><%= reservation.email %></td>
				<td><%= reservation.datetime %></td>
				<td><%= reservation.message %></td>
			</tr>
		<% end %>
	<% end %>
<% else %>
	<% simple_form_for @reservation, html: { class: 'form-horizontal' } do |f| %>
		<%= f.input :email %>
		<%= f.input :datetime %>
		<%= f.input :message %>
		<%= f.button :submit %>
	<% end %>
<% end %>


<%= link_to 'Back', restaurants_path %>