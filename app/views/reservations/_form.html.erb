
<%= form_for [@reservations, @restaurants], remote: true, html: { style: "display:inline;" } do |f| %>
    <div class="form-group">
        <%= f.label :email %>
            <%= f.email_field :email %>
    </div>

    <div class="form-group">
        <%= f.label :datetime %>
            <%= f.datetime_select :datetime %>
    </div>

    <div class="form-group">
        <%= f.label :message%>
            <%= f.text_field :message %>
    </div>

    <div class="form-group">
        <%= f.submit :class => 'btn' %>
    </div>

<% end %>